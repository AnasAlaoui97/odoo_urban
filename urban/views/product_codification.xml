<?xml version="1.0"?>
<odoo>

<!--    Variantes d'articles views-->

        <record model="ir.ui.view" id="product_product_tree_view_1">
            <field name="name">product.product.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="priority" eval="25"/>
            <field name="arch" type="xml">
                <field name="default_code" position="replace">
                    <field name="prod_code_V"  string = "Code_Article"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_normal_form_view_1">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="priority" eval="25"/>
            <field name="arch" type="xml">
                <field name="default_code" position="replace">
                    <field name="prod_code_V" string = "Code_Article"/>
                </field>
            </field>
        </record>

<!--    Articles views-->

        <record model="ir.ui.view" id="product_template_only_form_view_2">
            <field name="name">product.template.product.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <field name="default_code" position="replace">
                    <field name="prod_code_P" string = "Code_Article"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_tree_view1">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="priority" eval="25"/>
            <field name="arch" type="xml">
                <field name="default_code" position="replace">
                    <field name="prod_code_P"  string = "Code_Article"/>
                </field>
            </field>
        </record>

<!-- Caracteristiques - Valeurs view-->

        <record model="ir.ui.view" id="product_attribute_view_form_2">
            <field name="name">product.attribute.value.view.inherit</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="product.product_attribute_view_form"/>
            <field name="priority" eval="25"/>
            <field name="arch" type="xml">
                <field name="sequence" position="after">
                    <field name="code_value"  string = "Code_Valeur"/>
                </field>
            </field>
        </record>

        
</odoo>
